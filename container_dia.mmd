    title Marketplace System Container Diagram

    System_Boundary(marketplaceSystem, "Marketplace System") {
        Container(webApp, "Web Application", "A web-based front-end for customers and vendors.", "React, HTML, CSS")
        Container(api, "API", "Handles requests and business logic.", "Node.js, Express")
        Container(database, "Database", "Stores product, order, and user data.", "MySQL")
    }

    Rel(customer, webApp, "Uses", "HTTPS")
    Rel(vendor, webApp, "Uses", "HTTPS")
    Rel(admin, webApp, "Uses", "HTTPS")
    Rel(webApp, api, "Uses", "REST API")
    Rel(api, database, "Reads/Writes", "SQL")
